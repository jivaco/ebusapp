<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title1" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">64sp</item>
    </style>

    <style name="title2" parent="title1">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="heading4" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="bodyText" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bodyTextLight" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="inputfield" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">314dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginStart">57dp</item>
        <item name="android:paddingEnd">100dp</item>
        <item name="android:paddingStart">44dp</item>
    </style>

    <style name="pill_text" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">500dp</item>
    </style>

    <style name="input_icons" parent="">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">26dp</item>
    </style>

    <style name="custom_btn" parent="">
        <item name="backgroundTint">@color/main</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:layout_width">365dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="custom_btn_secondary" parent="">
        <item name="backgroundTint">@color/main</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
